@model Sakura.AspNetCore.IPagedList<ClassLibraryForSiebePaesschesoone.ClientModel>

<!DOCTYPE html>
<html>

<style>
table {
    border-collapse: collapse;
    width: 80%;
    margin: 0 auto;
}
th, td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}
tr:hover {
    background-color:#f5f5f5;
}
	
</style>
<font color= "black" face="arial">
<body>
   <div>
        <br />
        <table>	
            <tr>
                <td> <b>Serial key		</b></td>
                <td> <b>First name    	</b></td>
                <td> <b>Family name    	</b></td> 
                <td> <b>Email address  	</b></td> 
                <td> <b>Phone number   	</b></td> 
                <td> <b>Date of birth	</b></td>
            </tr>

               			
            @foreach (ClientModel obj in Model) 
            { 
	    	<tr>
		        <td> @obj.SerialKey     </td>
		        <td> @obj.FirstName     </td>
	            <td> @obj.FamilyName    </td> 
	            <td> @obj.EmailAddress  </td> 
	            <td> @obj.PhoneNumber   </td> 
		        <td> @obj.DateOfBirth   </td>
            </tr>
            }
				
        </table>
    </div>

    <div align="center">
        <br>
			<input type="button" class="btn btn-info" value="Go back to home page" onclick="location.href='@Url.Action("Index")'"/>
        <br>
    </div>

	<pager/>

</body>
</font>
</html>

